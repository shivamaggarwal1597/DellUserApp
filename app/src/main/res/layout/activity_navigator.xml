<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.delluserapp.NavigatorActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/passbook_button"
        android:background="@android:color/holo_blue_light"
        android:text="PASSBOOK"
        android:layout_margin="10dp"
        android:layout_weight="1"/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:background="@android:color/holo_blue_light"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:id="@+id/display_devices_button"
        android:text="DISPLAY DEVICES"
        android:layout_margin="10dp"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/schemes_button"
        android:text="SCHEMES"
        android:layout_weight="1"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/issues_button"
        android:background="@android:color/holo_blue_light"
        android:text="ISSUES"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/report_competetion_button"
        android:text="REPORT COMPETETION"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/scan_barcode_button"
        android:text="SCAN BARCODE"
        android:layout_weight="1"/>
</LinearLayout>
