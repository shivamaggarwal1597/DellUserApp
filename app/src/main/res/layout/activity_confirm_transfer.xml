<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="400dp"
    tools:context="com.dell.shivam.delluserapp.ConfirmTransferActivity">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/service_tag_transfer"
            android:text="SERVICE TAG: "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:id="@+id/model_number_transfer"
            android:textStyle="bold"
            android:text="MODEL NO.: "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/config_transfer"
            android:text="CONFIG:  "
            android:layout_weight="1.4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/display_status_transfer"
            android:text="DISPLAY STATUS :  "
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="CONFIRM TRANSFER"
        android:id="@+id/confirm_transfer"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:layout_weight="1"/>
</LinearLayout>
